drop database app;
create database app;

CREATE TABLE app.customer
(
Id	int not null AUTO_INCREMENT,
Cust_name	Varchar(20)	,
Id_number	Varchar(20)	,
phone	Varchar(20)	,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
checkIn_time	Date	,
House_id	int	,
PRIMARY KEY (Id)
);


CREATE TABLE app.HouseInfo
(
Id	int not null AUTO_INCREMENT,
status	Varchar(2)	,
Building_name	Varchar(100)	,
Cust_name	Varchar(20)	,
Cust_id	int	,
Unit_number	Varchar(20)	,
Floor_number	Varchar(20),
Door_model	Varchar(20),
House_area	Varchar(20)	,
House_rights	Varchar(100),
House_number	Varchar(20)	,
PRIMARY KEY (Id)
);

CREATE TABLE app.instrumentCost
(
Id	int not null AUTO_INCREMENT,
House_id	int,
Cust_id	int	,
Building_name	Varchar(100),
House_number	Varchar(20)	,
Cust_name	Varchar(20)	,
Electri_price	DECIMAL(10,2)	,
Public_Electri_amount	int	,
Private_Electri_amount	int	,
Water_price	DECIMAL(10,2),
Public_water_amount	int	,
Private_water_amount	int	,
Instrument_Total_price	DECIMAL(10,2),
PRIMARY KEY (Id)
);

CREATE TABLE app.basicCost
(
Id	int not null AUTO_INCREMENT,
House_id	int	,
Cust_id	int	,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
Cust_name	Varchar(20)	,
House_area	Varchar(20)	,
Clean_price	DECIMAL(10,2)	,
Clean_total_price	DECIMAL(10,2)	,
Security_price	DECIMAL(10,2)	,
Security_total_price	DECIMAL(10,2)	,
Basic_total_price	DECIMAL(10,2)	,
PRIMARY KEY (Id)
);

CREATE TABLE app.chargeDetail
(
Id	int not null AUTO_INCREMENT,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
House_id	int	,
Cust_name	Varchar(20)	,
Cust_id	int	,
Pay_cost	DECIMAL(10,2)	,
Pay_time	date	,
Operater	Varchar(20)	,
PRIMARY KEY (Id)
);

CREATE TABLE app.smsReminder
(
Id	int not null AUTO_INCREMENT,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
Cust_name	Varchar(20)	,
Owe_price	DECIMAL(10,2)	,
deadline	Date	,
Phone	Varchar(20)	,
PRIMARY KEY (Id)
);

CREATE TABLE app.sysReminder
(
Id	int not null AUTO_INCREMENT,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
Cust_name	Varchar(20)	,
Owe_price	DECIMAL(10,2)	,
deadline	Date	,
Redminer_time	Date	,
Redminer_content	Varchar(100)	,
status	Varchar(2)	,
PRIMARY KEY (Id)
);

CREATE TABLE app.chargetotal 
(
Id	int not null AUTO_INCREMENT,
Building_name	Varchar(100)	,
House_number	Varchar(20)	,
Cust_name	Varchar(20)	,
Total_price	DECIMAL(10,2)	,
Basic_total_price	DECIMAL(10,2)	,
Instrument_Total_price	DECIMAL(10,2)	,
status	Varchar(2)	,
deadline	Date	,
PRIMARY KEY (Id)
);